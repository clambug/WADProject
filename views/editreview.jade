extends layout
block content
    .row
     h1 LEt Edit a Review
     .formHold
       form(method="post")
        each review in indOne
         fieldset
          label(for="name") Product Name:
          input(name="name", type="text", value="#{review.name}")
          label(for="content") Edit review:
          input(name="content", type="text", value="#{review.content}")
          label(for="image") Edit Image:
          input(name="image", type="text", value="#{review.image}")
          button.button(type="submit") Edit Review